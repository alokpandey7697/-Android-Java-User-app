<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/product_seller_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/product_seller_name"
            android:scaleType="fitCenter"

            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/product_seller_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product price"
            android:layout_below="@+id/product_seller_image"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/product_seller_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product description"
            android:layout_below="@+id/product_seller_Price"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/product_seller_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:layout_below="@+id/product_seller_Description"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/product_category_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:layout_below="@+id/product_seller_status"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>