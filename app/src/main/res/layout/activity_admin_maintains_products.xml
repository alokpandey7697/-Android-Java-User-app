<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"

    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainsProductsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:textSize="20sp"
            android:textAlignment="center"

            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/product_image_maintains"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/product_name"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"/>

        <EditText
            android:id="@+id/product_name_maintains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:layout_below="@+id/product_image_maintains"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/product_Price_maintains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product price"
            android:layout_below="@+id/product_name_maintains"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <EditText
            android:id="@+id/product_Description_maintains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product description"
            android:layout_below="@+id/product_Price_maintains"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product description"
            android:layout_below="@+id/product_Description_maintains"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="Apply changes"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/delete_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product description"
            android:layout_below="@+id/apply_changes_btn"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="Delete this product"


            android:textColor="@android:color/white"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>